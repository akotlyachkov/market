{
    "name": "fastlight",
    "version": "2.0.0",
    "private": true,
    "scripts": {
        "watch ngc": "ngc -p tsconfig.json -w",
        "watch webpack browser": "webpack --config webpack.browser.js --watch",
        "watch webpack server": "webpack --config webpack.server.js --watch",
        "watch gulp": "gulp watch --gulpfile gulpfile.client.js",
        "gulp": "gulp --gulpfile gulpfile.client.js",
        "ngc": "ngc -p tsconfig.json",
        "webpack browser": "webpack --config webpack.browser.js",
        "webpack-browser-release": "webpack --config webpack.browser.release.js",
        "webpack-server": "webpack --config webpack.server.js",
        "ngc-release": "ngc -p tsconfig.release.json",
        "gulp-production":"gulp --gulpfile gulpfile.production.js",
        "gulp-clean":"gulp clean --gulpfile gulpfile.production.js",
        "build":"npm run gulp-clean && npm run ngc-release && npm run webpack-browser-release && npm run webpack-server && npm run gulp-production",
        "build-test":"npm run gulp-clean && npm run ngc-release && npm run webpack-browser-release && npm run webpack-server && npm run gulp-production"
    },
